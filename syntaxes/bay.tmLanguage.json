{
	"scopeName": "source.bay",
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bay Lang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bay",
				"match": "\\b(namespace|struct|if|while|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bay",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bay",
					"match": "\\\\."
				}
			]
		}
	}
}